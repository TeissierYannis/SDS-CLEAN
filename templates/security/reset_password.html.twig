{% extends "base.html.twig" %}

{% block body %}

    <div class="flex items-center flex-col">

        <h1 class="mt-5 mb-2 text-2xl uppercase font-bold">Mot de passe oubli√© ?</h1>
        {{ form_start(form, {
            'attr': {
                'class': 'w-1/2'
            }
        }) }}

        {{ form_row(form.email, {
            'attr': {
                'class': 'mt-1 focus:ring-pink-600 focus:border-pink-600 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md',
                'rows': '18'
            },
            'label_attr': {
                'class': 'block text-sm font-medium text-gray-700',
            },
            'help_attr': {
                'class': 'block text-sm font-medium text-gray-700',
            }
        }) }}

        {{ form_rest(form) }}

        <button class="mt-5 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">
            Continuer
        </button>
    </div>
    {{ form_end(form) }}
    </div>

{% endblock %}