{% extends 'base.html.twig' %}

{% block title %}MaSalle - Inscription{% endblock %}

{% block body %}



    <div class="flex items-center flex-col">

        <h1 class="mt-5 mb-2 text-2xl uppercase font-bold">S'inscrire</h1>

        {{ form_start(form, {
            'attr': {
                'class': 'w-1/2'
            }
        }) }}

        {{ form_row(form.email, {
            'attr': {
                'class': 'mt-1 focus:ring-pink-600 focus:border-pink-600 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'
            },
            'label_attr': {
                'class': 'block text-sm font-medium text-gray-700'
            }
        }) }}

        {{ form_row(form.pseudo, {
            'attr': {
                'class': 'mt-1 focus:ring-pink-600 focus:border-pink-600 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'
            },
            'label_attr': {
                'class': 'block text-sm font-medium text-gray-700'
            }
        }) }}

        {{ form_row(form.plainPassword.first, {
            'attr': {
                'class': 'mt-1 focus:ring-pink-600 focus:border-pink-600 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'
            },
            'label_attr': {
                'class': 'block text-sm font-medium text-gray-700'
            },
        }) }}

        {{ form_row(form.plainPassword.second, {
            'attr': {
                'class': 'mt-1 focus:ring-pink-600 focus:border-pink-600 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'
            },
            'label_attr': {
                'class': 'block text-sm font-medium text-gray-700'
            },
        }) }}

        <div class="flex">
            {{ form_row(form.isNewsletterRegistered, {
                'attr': {
                    'class': 'focus:ring-pink-500 h-4 w-4 text-pink-600 border-gray-300 rounded'
                },
                'label_attr': {
                    'class': 'text-sm font-medium text-gray-700 mr-2'
                }
            }) }}

        </div>

        <button class="mt-5 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">
            S'inscrire
        </button>

        {{ form_end(form) }}
    </div>
{% endblock %}

