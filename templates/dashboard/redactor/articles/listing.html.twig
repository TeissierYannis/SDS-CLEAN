{% extends 'base.html.twig' %}

{% block title %}MaSalle - Gestion des article{% endblock %}

{% block body %}
    <h1 class="uppercase font-bold text-2xl my-3 ml-10">Gestion des articles</h1>

    <div class="flex justify-end mb-3 w-5/6">

        <a href="{{ path('article_create') }}"
           class="mt-5 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
            Nouvel article
        </a>
    </div>

    <div class="flex flex-col mx-10 <">
        <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
            <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
                <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead class="bg-gray-50">
                        <tr>
                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                Titre
                            </th>

                            <th scope="col"
                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
                                Cat√©gorie
                            </th>

                            <th scope="col" class="relative px-6 py-3">
                                <span class="sr-only">Edit</span>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">

                        {% for article in vm.articles %}
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    {{ article.title | u.truncate(30)}}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap hidden lg:table-cell">
                                    {{ article.category.title }}
                                </td>

                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium flex flex-col">

                                    <a class="text-pink-600 hover:text-pink-600"
                                       href="{{ path('article_update', { id: article.id }) }}">Editer</a>
                                    <a class="text-pink-600 hover:text-pink-600"
                                       href="{{ path('article_remove', { id: article.id }) }}">Supprimer</a>
                                </td>

                            </tr>

                        {% endfor %}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        {% include "components/pagination.html.twig" %}
    </div>

{% endblock %}
