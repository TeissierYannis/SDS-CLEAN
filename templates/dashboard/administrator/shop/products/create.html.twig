{% extends 'base.html.twig' %}

{% block title %}MaSalle - Création d'un produit{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-3">Création d'un produit</h1>

    <div class="d-flex justify-content-end mb-3">

        <a class="btn btn-secondary mr-2" href="#">Retour</a>

    </div>

    {{ form_start(form) }}
    {{ form_errors(form) }}

    {{ form_row(form.name) }}
    {{ form_row(form.description) }}
    {{ form_row(form.price) }}
    {{ form_row(form.image) }}

    {{ form_rest(form) }}
    <button class="btn btn-primary">Sauvegarder</button>
    {{ form_end(form) }}

{% endblock %}
