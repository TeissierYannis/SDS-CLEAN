{% extends 'base.html.twig' %}

{% block title %}MaSalle - Rédaction de la newsletter{% endblock %}

{% block body %}

    <div class="flex items-center flex-col">

        <h1 class="mt-5 mb-2 text-2xl uppercase font-bold">Rédaction de la newsletter</h1>

        {{ form_start(form, {
            'attr': {
                'class': 'w-1/2'
            }
        }) }}

        {{ form_errors(form) }}

        {{ form_row(form.object, {
            'attr': {
                'class': 'mt-1 focus:ring-pink-600 focus:border-pink-600 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md'
            },
            'label_attr': {
                'class': 'block text-sm font-medium text-gray-700'
            }
        }) }}

        {{ form_row(form.body, {
            'attr': {
                'class': 'mt-1 focus:ring-pink-600 focus:border-pink-600 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md',
                'rows': '15'
            },
            'label_attr': {
                'class': 'block text-sm font-medium text-gray-700'
            }
        }) }}

        <button type="submit"
                class="mt-5 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-pink-600 hover:bg-pink-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-pink-500">
            Envoyer
        </button>

        {{ form_end(form) }}

        <hr class="mt-2">
        <div class="w-1/2">
            <h2 class="mt-5 mb-2 text-xl uppercase font-bold">Personnes inscrites à la newsletter</h2>

            <table class="min-w-full divide-y divide-gray-200 w-1/2">
                <thead class="bg-gray-50">
                <tr>
                    <th scope="col"
                        class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider hidden lg:table-cell">
                        Email
                    </th>
                </tr>
                </thead>
                <tbody class="bg-white divide-y divide-gray-200">

                {% for email in emails %}
                    <tr>

                        <td class="px-6 py-4 whitespace-nowrap hidden lg:table-cell">
                            {{ email }}
                        </td>

                    </tr>

                {% endfor %}

                </tbody>
            </table>
        </div>

    </div>



{% endblock %}
