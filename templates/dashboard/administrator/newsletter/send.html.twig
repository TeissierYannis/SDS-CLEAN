
{% extends 'base.html.twig' %}

{% block title %}MaSalle - Rédaction de la newsletter{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-3">Rédaction de la newsletter</h1>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.object) }}
    </div>
    <div class="form-group">
        {{ form_row(form.body) }}
    </div>

    <button class="btn btn-lg btn-primary">Sauvegarder</button>
    {{ form_end(form) }}

    <h2 class="mt-3">Personnes inscrites à la newsletter</h2>

    <table class="table mt-3">
        <tbody>
        {% for email in emails %}

            <tr>
                <td scope="row">{{ email }}</td>
            </tr>

        {% endfor %}

        </tbody>
    </table>


{% endblock %}
