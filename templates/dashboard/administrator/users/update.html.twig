
{% extends 'base.html.twig' %}

{% block title %}MaSalle - Editon d'un utilisateur{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-3">Edition d'un utilistateur</h1>

    <div class="d-flex justify-content-end mb-3">

        <a class="btn btn-secondary mr-2" href="{{ path('user_listing') }}">Retour</a>

    </div>

    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.email) }}
    </div>
    <div class="form-group">
        {{ form_row(form.pseudo) }}
    </div>
    <div class="form-group">
        {{ form_row(form.isNewsletterRegistered) }}
    </div>
    <div class="form-group">
        {{ form_row(form.roles) }}
    </div>

    <button class="btn btn-lg btn-primary">Sauvegarder</button>
    {{ form_end(form) }}



{% endblock %}
