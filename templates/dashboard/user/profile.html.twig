{% extends 'base.html.twig' %}

{% block title %}MaSalle - Mon profil{% endblock %}

{% block body %}
    <h1 class="mt-5 mb-3">Mon profil</h1>
    {{ form_start(form) }}

    <div class="form-group">
        {{ form_row(form.email) }}
    </div>
    <div class="form-group">
        {{ form_row(form.pseudo) }}
    </div>
    <div class="form-group">
        {{ form_row(form.isNewsletterRegistered) }}
    </div>

    <button class="btn btn-lg btn-primary">Sauvegarder</button>
    {{ form_end(form) }}



{% endblock %}
