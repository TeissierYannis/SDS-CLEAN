{% extends 'base.html.twig' %}

{% block title %}MaSalle - {{ article.title }}{% endblock %}

{% block body %}

    <h1 class="mt-5 mb-2">{{ article.title }}</h1>

    <div class="d-flex">
        <div class="text-uppercase text-primary small">
        {{ article.category.title }}
        </div>
        <span class="text-black-50 mx-1">/</span>
        <div class="text-black-50 small">
            {{ article.createdAt|date("m/d/Y", "Europe/Paris") }}
        </div>
        <span class="text-black-50 mx-1">/</span>
        <div class="text-black-50 small">
            rédigé par {{ article.redactor.pseudo }}
        </div>
    </div>
    <hr>

    <p class="text-justify">{{ article.content|raw }}</p>

{% endblock %}
