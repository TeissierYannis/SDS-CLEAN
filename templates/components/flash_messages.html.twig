<div class="toast" style="z-index: 100; position: absolute; top: 50px; right: 20px;">

    {% for info in app.flashes('info') %}

        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header text-white  bg-info text-capitalize flex items-center">
                <strong class="mr-auto">Informations </strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                {{ info }}
            </div>
        </div>
    {% endfor %}

    {% for info in app.flashes('error') %}

        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header text-white  bg-danger text-capitalize flex items-center">
                <strong class="mr-auto">Informations </strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                {{ info }}
            </div>
        </div>
    {% endfor %}

    {% for info in app.flashes('warning') %}

        <div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header text-white  bg-warning text-capitalize flex items-center">
                <strong class="mr-auto">Informations </strong>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                {{ info }}
            </div>
        </div>
    {% endfor %}
</div>


<script>

    $('.toast').toast({ autohide: true, delay: 5000 })
    $('.toast').toast('show')

</script>